CC = gcc
CFLAGS = -Wall -Wextra -std=c99 -O2
LIBS = -lpthread

# Compilar todos
all: q1a q1g q2a q2b q2f

# Quest√£o 1a - Produtor-Consumidor (3P+1C)
q1a: q1a.c
	$(CC) $(CFLAGS) $< -o $@ $(LIBS)

# Quest√£o 1g - Produtor-Consumidor (6P+2C)
